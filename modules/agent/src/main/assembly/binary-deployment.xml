<assembly>
	<id>binary</id>

	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/package/conf</directory>
			<outputDirectory>re-agent/conf</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/package/bin</directory>
			<outputDirectory>re-agent/bin</outputDirectory>
			<filtered>true</filtered>
			<fileMode>755</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/package/lib</directory>
			<outputDirectory>re-agent/lib</outputDirectory>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>src/main/assembly</directory>
			<outputDirectory>re-agent/logs</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<filtered>true</filtered>
		</fileSet>		
		<fileSet>
            <directory>${project.basedir}/../core/rest/target</directory>
           <outputDirectory>re-agent/lib</outputDirectory>
            <includes>
                <include>rest-*.jar</include>
            </includes>
        </fileSet>        
        <fileSet>
            <directory>${project.basedir}/../core/core-scheduler/target</directory>
            <outputDirectory>re-agent/lib</outputDirectory>
            <includes>
                <include>core-scheduler-*.jar</include>
            </includes>
        </fileSet>        
        <fileSet>
			<directory>${project.basedir}/../core/udp-communication/target</directory>
            <outputDirectory>re-agent/lib</outputDirectory>
            <includes>
                <include>udp-communication-*.jar</include>
            </includes>
        </fileSet>
        
        <fileSet>
            <directory>${project.basedir}/target</directory>
            <outputDirectory>re-agent/lib</outputDirectory>
            <includes>
                <include>agent-*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${java.home}/../lib/</directory>
            <outputDirectory>re-agent/lib</outputDirectory>
            <includes>
                <include>tools.jar</include>
            </includes>
        </fileSet>
	</fileSets>
	
	<dependencySets>
		<dependencySet>
			<outputDirectory>re-agent/lib</outputDirectory>
			<includes>
				<!-- <include>${project.groupId}:rest:jar:${project.version}</include>
				<include>${project.groupId}:core-scheduler:jar:${project.version}</include>
				<include>${project.groupId}:udp-communication:jar:${project.version}</include>
				<include>${project.groupId}:agent:jar:${project.version}</include> -->
				<include>org.codehaus.jackson:jackson-core-asl:jar:1.9.12</include>
				<include>org.codehaus.jackson:jackson-mapper-asl:jar:1.9.12</include>
				<include>org.codehaus.jackson:jackson-jaxrs:jar:1.9.12</include>
				<include>io.netty:netty:jar:3.6.6.Final</include>
				<include>org.jboss.resteasy:resteasy-netty:jar:2.3.6.Final</include>
				<include>org.jboss.resteasy:jaxrs-api:jar:2.3.6.Final</include>
				<include>log4j:log4j:jar:1.2.17</include>
				<include>org.hyperic:sigar:jar:1.6.5.132-5</include>
				<include>org.jboss.resteasy:resteasy-jackson-provider:jar:2.3.6.Final</include>
				<include>org.jboss.resteasy:resteasy-jaxb-provider:jar:2.3.6.Final</include>
				<include>org.jboss.resteasy:resteasy-jaxrs:jar:2.3.6.Final</include>
				<include>org.yaml:snakeyaml:jar:1.12</include>
				<include>org.quartz-scheduler:quartz:jar:2.1.7</include>
				<include>commons-logging:commons-logging:jar:1.1.3</include>
				<include>org.slf4j:slf4j-api:jar:1.7.5</include>
				<include>org.slf4j:slf4j-log4j12:jar:1.7.5</include>				
				<include>org.apache.httpcomponents:httpclient:jar:4.2.5</include>
				<include>org.apache.httpcomponents:httpcore:jar:4.2.4</include>
				<include>commons-io:commons-io:jar:2.4</include>

			</includes>
			<useProjectArtifact>true</useProjectArtifact>
			<unpack>false</unpack>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
</assembly>